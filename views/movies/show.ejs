<% include ../partials/header.ejs %>

<div class="text-center">
  <h1><%= Title %></h1>
</div>

<hr>

<div class="row" id="movieinfo">
  <div class="col-sm-6">
      <p><strong>Year: </strong><%= Year %></p>
      <p><strong>Rated: </strong><%= Rated %></p>
      <p><strong>Runtime: </strong><%= Runtime %></p>
      <p><strong>Language: </strong><%= Language %></p>
      <p><strong>Country: </strong><%= Country %></p>
      <p><strong>Genre: </strong><%= Genre %></p>
      <p><strong>Director: </strong><%= Director %></p>
      <p><strong>Actors: </strong><%= Actors %></p>
      <p><strong>Awards: </strong><%= Awards %></p>
      <p><strong>Plot: </strong><%= Plot %></p>
      <p><strong>ImdbRating: </strong><%= imdbRating %></p>

    <form class="favoritesform form" action="/favorites" method="post">
      <input type="hidden" name="imdbID" value="<%= imdbID %>">
      <input type="hidden" name="Title" value="<%= Title %>">
      <input type="hidden" name="Year" value="<%= Year %>">
      <input type="hidden" name="Poster" value="<%= Poster %>">

      <button type="hidden" class="btn btn-stroke-black btn-xs btn-block" id="favoritesbutton">Add to Favorites</button>
    </form>
  </div>


  <div class="col-sm-6" id="poster">
    <img class="img-right center-block" src= <%= Poster %>>
  </div>

</div>




<% include ../partials/footer.ejs %>